@model SaleMonitoring.Models.Product.ProductViewModel

@{
    ViewBag.Title = "View";
}

<h2>Modify</h2>

<div class="panel-success">
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            <div class="form-group">
                <label>Имя продукта</label>
                <h4>Прежнее имя продукта : @Model.ProductName</h4>
                @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Цена</label>
                <h4>Прежняя цена : @Model.Price</h4>
                @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Изменить дату доавления продукта</label>
                <h4>Прежняя дата : @Model.Date</h4>
                @Html.TextBoxFor(x => x.Date, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="text-center">
                <input type="submit" value="Сохранить" class="btn btn-success" />
            </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>