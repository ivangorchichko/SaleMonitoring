@model SaleMonitoring.Models.Client.ClientViewModel

@{
    ViewBag.Title = "View";
}

<h2>Modify</h2>

<div class="panel-success">
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            <div class="form-group">
                <label>Имя клиента</label>
                <h4>Прежнее имя клиента : @Model.ClientName</h4>
                @Html.TextBoxFor(x => x.ClientName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Телефон клиента</label>
                <h4>Прежний телефон клиента : @Model.ClientTelephone</h4>
                @Html.TextBoxFor(x => x.ClientTelephone, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Изменить дату доавления продукта</label>
                <h4>Прежняя дата : @Model.Date</h4>
                @Html.TextBoxFor(x => x.Date, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="text-center">
                <input type="submit" value="Сохранить" class="btn btn-success" />
            </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>