@model SaleMonitoring.Models.Purchase.ModifyPurchaseViewModel

@{
    ViewBag.Title = "View";
}

<h2>Modify</h2>

<div class="panel-success">
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            <div class="form-group">
                <label>Изменить дату заказа</label>
                <h4>Прежняя дата : @Model.Date</h4>
                @Html.TextBoxFor(x => x.Date, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group">
                <label>Имя клиента</label>
                <h4>Прежнее имя клиента : @Model.ClientName</h4>
                @Html.TextBoxFor(x => x.ClientName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Телефон клиента</label>
                <h4>Прежний телефон клиента : @Model.ClientTelephone</h4>
                @Html.TextBoxFor(x => x.ClientTelephone, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Название продукта</label>
                <h4>Прежнее название продукта : @Model.ProductName</h4>
                @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Цена продукта</label>
                <h4>Прежняя цена продукта : @Model.Price</h4>
                @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ManagerName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.ManagerName, Model.Managers, "Select Manager", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ManagerName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="text-center">
                <input type="submit" value="Сохранить" class="btn btn-success" />
            </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
