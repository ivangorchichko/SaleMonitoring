@model SaleMonitoring.Models.Purchase.CreatePurchaseViewModel
@{
    ViewBag.Title = "View";
}

<h2>Create</h2>

<div class="panel-success">
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
        <div class="form-group">
            <label>Дата заказа</label>
            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
        </div>
            <div class="form-group">
                <label>Имя клиента</label>
                @Html.TextBoxFor(x => x.ClientName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ClientName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Телефон клиента</label>
                @Html.TextBoxFor(x => x.ClientTelephone, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ClientTelephone, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Название продукта</label>
                @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Цена продукта</label>
                @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Price, "", new {@class = "text-danger"})
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ManagerName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.ManagerName, Model.Managers, "Select Manager", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ManagerName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="text-center">
                <input type="submit" value="Сохранить" class="btn btn-success" />
            </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
